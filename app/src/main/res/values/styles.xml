<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/basic</item>
        <item name="colorControlActivated">@color/basic</item>
    </style>

    <style name="checkBox" parent="Theme.AppCompat">
        <item name="colorAccent">#eee</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">#403e3f</item>
        <item name="colorControlNormal">@color/basic</item>
        <item name="colorControlActivated">@color/basic</item>
    </style>
</resources>
